{
  "name": "jhaas-portal-backend",
  "version": "1.0.0",
  "description": "Backend Service for JHaaS Portal",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "tsc && node ./dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/ --ext .ts",
    "format": "prettier --write src/",
    "typeorm": "typeorm-ts-node-commonjs -d src/config/Database.ts",
    "generate-migration": "typeorm-ts-node-commonjs -d src/config/Database.ts migration:generate --pretty",
    "update": "ncu -u",
    "job": "ts-node"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/server.ts || (sleep 10; touch ./src/server.ts)"
  },
  "repository": {
    "type": "git",
    "url": "git@git.computational.bio.uni-giessen.de:it/jhaas-backend.git"
  },
  "author": "Nils Mittler",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/http-errors": "^2.0.4",
    "@types/minio": "^7.1.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.4",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/pug": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "npm-check-updates": "^16.14.12",
    "prettier": "^3.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "connect-redis": "^7.1.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "http-errors": "^2.0.0",
    "marked": "^11.1.1",
    "minio": "^7.1.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "openid-client": "^5.6.4",
    "passport": "^0.7.0",
    "pg": "^8.11.3",
    "pug": "^3.0.2",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.19"
  }
}
