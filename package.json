{
  "name": "jhaas-portal-backend",
  "version": "1.0.0",
  "description": "Backend Service for JHaaS Portal",
  "main": "./dist/server.js",
  "config": {
    "ncuExcludePkgs": "openid-client"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "tsc && node ./dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint -c eslint.config.mjs src/",
    "format": "prettier --write src/",
    "typeorm": "typeorm-ts-node-commonjs -d src/config/Database.ts",
    "generate-migration": "typeorm-ts-node-commonjs -d src/config/Database.ts migration:generate --pretty",
    "update": "ncu -u -x $npm_package_config_ncuExcludePkgs",
    "job": "ts-node"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/server.ts || (sleep 10; touch ./src/server.ts)"
  },
  "repository": {
    "type": "git",
    "url": "git@git.computational.bio.uni-giessen.de:it/jhaas-backend.git"
  },
  "author": "Nils Mittler",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/bcrypt": "^5.0.2",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/http-errors": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.12.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/pug": "^2.0.10",
    "eslint": "^9.19.0",
    "nodemon": "^3.1.9",
    "npm-check-updates": "^17.1.14",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "dependencies": {
    "@kubernetes/client-node": "1.0.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "connect-redis": "^8.0.1",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "http-errors": "^2.0.0",
    "marked": "^15.0.6",
    "minio": "^8.0.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.0",
    "openid-client": "^5.7.0",
    "passport": "^0.7.0",
    "pg": "^8.13.1",
    "pug": "^3.0.3",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  }
}
