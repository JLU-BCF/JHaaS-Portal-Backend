{
  "name": "jhaas-portal-backend",
  "version": "1.0.0",
  "description": "Backend Service for JHaaS Portal",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "tsc && node ./dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/ --ext .ts",
    "format": "prettier --write src/",
    "typeorm": "typeorm-ts-node-commonjs",
    "update": "ncu -u",
    "job": "ts-node"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/server.ts || (sleep 10; touch ./src/server.ts)"
  },
  "repository": {
    "type": "git",
    "url": "git@git.computational.bio.uni-giessen.de:it/jhaas-backend.git"
  },
  "author": "Nils Mittler",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/http-errors": "^2.0.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/minio": "^7.0.18",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.3",
    "@types/nodemailer": "^6.4.8",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/passport-openidconnect": "^0.1.0",
    "@types/pug": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.41.0",
    "nodemon": "^2.0.22",
    "npm-check-updates": "^16.10.12",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.18.1",
    "bcrypt": "^5.1.0",
    "connect-redis": "^7.1.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "http-errors": "^2.0.0",
    "minio": "^7.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.2",
    "openid-client": "^5.4.2",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.0",
    "pug": "^3.0.2",
